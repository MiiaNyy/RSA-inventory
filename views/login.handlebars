<div class="form-template box">
    <h2 class="text-center">Log in</h2>
    <form method="post" action="/login">

        <div class="form-group mt-3">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email" required placeholder="Enter email"
                   value={{values.email}}>
            {{#each errors.email}}
                <p class="form-text error">{{this}}</p>
            {{/each}}

        </div>
        <div class="form-group mt-3">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            {{#each errors.password}}
                <p class="form-text error">{{this}}</p>
            {{/each}}
        </div>
        {{#each errors.loginError}}
            <p class="form-text error">{{this}}</p>
        {{/each}}
        <div class="text-center">
            <button type="submit" class="btn light-btn mt-4 mb-2">Login</button>

            <div>
                <small class="form-text text-muted">Don't have account yet? Sign up <a
                        href="/signup">here</a></small>
            </div>
        </div>
    </form>

</div>

