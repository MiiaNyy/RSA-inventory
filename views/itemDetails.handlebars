<div class="container__item-details">
    <button class="btn light-btn" onclick="goBackToPreviousPage()"><i class="fas fa-arrow-left"></i> Back</button>

    <div class="item">
        <h2 class="text-center mb-3">{{item.name}} the {{item.animal}}</h2>
        <table class="table table-bordered ">

            <thead class="box">
            <tr>
                <th scope="col">Key</th>
                <th scope="col">Value</th>
            </tr>
            </thead>
            <tbody class="box">
            <tr>
                <th scope="row">Name</th>
                <td>{{item.name}}</td>
            </tr>
            <tr>
                <th scope="row">Animal</th>
                <td>{{item.animal}}</td>
            </tr>
            <tr>
                <th scope="row">Size</th>
                <td>{{item.size}}</td>
            </tr>
            <tr>
                <th scope="row">Color</th>
                <td style="gap: 1em" class="d-flex">
                    <div style="background-color: {{item.color}}" class="clr-box"></div>
                    <span>{{item.color}}</span>
                </td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{item.description}}</td>
            </tr>
            <tr>
                <th scope="row">Price</th>
                <td>{{item.price}}â‚¬</td>
            </tr>
            <tr>
                <th scope="row">In stock</th>
                <td>{{item.numberInStock}}</td>
            </tr>

            </tbody>
        </table>
    </div>

    <div class="container__btn-delete">
        <button onclick="{{#if currentUser}}openPopUp('pop-up__delete-item'){{else}} openPopUp('pop-up__log-user-in'){{/if}}"
                class="btn danger-btn">Delete
        </button>
    </div>
</div>

<div class="pop-up pop-up__delete-item">
    <h2>You are about to remove item</h2>
    <h2><span>{{item.name}} the {{item.animal}}</span></h2>
    <p>Are you sure?</p>
    <div class="pop-up__container">
        <form action="/item/{{item._id}}" method="post">
            <input class="btn danger-btn" type="submit" value="Delete"/>
        </form>
        <button onclick="closePopUp('pop-up__delete-item')" class="btn dark-link-btn">Cancel</button>
    </div>
</div>

<div class="pop-up pop-up__log-user-in">

    <h2>You must log in before you can delete the item!</h2>
    <div class="pop-up__container">
        <a href="/login" class="btn light-link-btn">Log in</a>
        <button onclick="closePopUp('pop-up__log-user-in')" class="btn dark-link-btn">Cancel</button>
    </div>
</div>
