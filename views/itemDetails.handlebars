<div class="container__item-details">
    <button class="btn" onclick="goBackToPreviousPage()"><i class="fas fa-arrow-left"></i> Back</button>

    <div class="item">
        <h2 class="text-center mb-3">{{item.name}} the {{item.animal}}</h2>
        <table class="table table-bordered ">

            <thead class="box">
            <tr>
                <th scope="col">Key</th>
                <th scope="col">Value</th>
            </tr>
            </thead>
            <tbody class="box">
            <tr>
                <th scope="row">Name</th>
                <td>{{item.name}}</td>
            </tr>
            <tr>
                <th scope="row">Animal</th>
                <td>{{item.animal}}</td>
            </tr>
            <tr>
                <th scope="row">Size</th>
                <td>{{item.size}}</td>
            </tr>
            <tr>
                <th scope="row">Color</th>
                <td style="gap: 1em" class="d-flex">
                    <div style="background-color: {{item.color}}" class="clr-box"></div>
                    <span>{{item.color}}</span>
                </td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{item.description}}</td>
            </tr>
            <tr>
                <th scope="row">Price</th>
                <td>{{item.price}}â‚¬</td>
            </tr>
            <tr>
                <th scope="row">In stock</th>
                <td>{{item.numberInStock}}</td>
            </tr>

            </tbody>
        </table>
    </div>

    <form class="container__btn-delete" action="/item/{{item._id}}" method="post">
        <input class="btn btn-delete" type="submit" value="Delete" />
    </form>

</div>

<div class="pop-up">
    <h2>You are about to remove item <span>{{item.name}} the {{item.animal}}</span></h2>
    <p>Are you sure?</p>
    <button class="btn">Delete</button>
    <button class="btn">Cancel</button>
</div>

