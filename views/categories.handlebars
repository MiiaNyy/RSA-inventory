<div class="container-flex">
    <button class="btn" onclick="goBackToPreviousPage()"><i class="fas fa-arrow-left"></i> Back</button>
    <div class="container-flex__item">
        <h2 class="text-center">All of the categories listed</h2>
        <div class="categories">
            {{#each categories}}
                <div style="margin-bottom: 1em" class="categories__item">
                    <p class="text-center"><a style="font-weight: bolder" href={{this.url}}>{{this.name}}</a></p>
                    <hr>
                    <ul>
                        {{# each this.subcategories}}
                            <li>
                                <a href={{this.url}}>{{this.name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            {{/each}}
        </div>

    </div>
</div>



