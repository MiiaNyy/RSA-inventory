<div class="form-template box">
    <h2 class="text-center ">New user registration</h2>
    <form method="post" action="/signup">
        <div class="d-flex justify-content-between mt-3">

            <div class="form-group row-item">
                <label for="firstName">First name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter first name"
                       required value={{values.firstName}} >
                {{#each errors.firstName}}
                    <p class="form-text error">{{this}}</p>
                {{/each}}
            </div>

            <div class="form-group row-item">
                <label for="lastName">Last name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter last name"
                       required value={{values.lastName}}>
                {{#each errors.lastName}}
                    <p class="form-text error">{{this}}</p>
                {{/each}}

            </div>
        </div>

        <div class="form-group mt-3">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email"
                   placeholder="Enter email" value={{values.email}}>

            {{#each errors.email}}
                <p class="form-text error">{{this}}</p>
            {{/each}}
        </div>
        <div class="form-group mt-3">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            {{#each errors.password}}
                <p class="form-text error">{{this}}</p>
            {{/each}}
            <small class="form-text text-muted">
                Must be at min 10 characters long, must contain uppercase and lowercase character.
            </small>
        </div>

        <div class="text-center ">
            <input class="btn light-btn mt-4 mb-2" type="submit" value="Sign up">
            <div>
                <small class="form-text text-muted">Already have an account? Login <a
                        href="/login">here</a></small>
            </div>
        </div>
    </form>

</div>

