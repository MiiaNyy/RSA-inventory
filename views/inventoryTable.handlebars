<div class="container">
    <div style="max-width: 600px;" class="container mb-4">
        <h5 class="text-center mb-4"> {{info.title}}</h5>
        <p>{{info.text}}</p>
    </div>
</div>


<div style="max-width: 800px" class="container">
    <table class="table table-hover box">
        <thead class="box">
        <tr>
            <th scope="col"></th>
            <th id="animal-category" scope="col">Animal
                <a href="/"></a>
                <i class="fas fa-sort-down transition" onclick="rearrangeItemOrder(this)"></i>
            </th>
            <th id="size-category" scope="col">Size
                <i class="fas fa-sort-down transition" onclick="rearrangeItemOrder(this)"></i>
            </th>
            <th id="price-category" scope="col">Price
                <i class="fas fa-sort-down transition" onclick="rearrangeItemOrder(this)"></i>
            </th>
            <th scope="col">Color</th>
        </tr>
        </thead>
        <tbody class="box">
        {{#each items}}
            <tr onclick="window.location=`/item/{{this._id}}`;" style="cursor: pointer">
                <td></td>
                <td>{{this.name}} the {{this.animal}}</td>
                <td>{{this.size}}</td>
                <td>{{this.price}}â‚¬</td>
                <td>
                    <div style="background-color: {{this.color}}" class="item__clr"></div>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

