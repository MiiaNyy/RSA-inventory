
<div>
    <h2 class="text-center">Create new stuffed animal item</h2>
    <form action="/item" method="POST" class="item-form" >

        <div class="form-group ">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="form-group ">
            <label for="animal">Animal breed</label>
            <select class="form-control" id="animal" name="animal" required>
                {{# animalBreeds}}
                    {{# this.subcategories}}
                        <option>{{this.name}}</option>
                    {{/this.subcategories}}
                {{/animalBreeds}}
            </select>
        </div>


        <div class="flex-container">
            <div class="form-group flex-container__item">
                <label for="size">Size</label>
                <select class="form-control" id="size" name="size" required>
                    {{# animalSizes}}
                        {{# this.subcategories}}
                            <option>{{this.name}}</option>
                        {{/this.subcategories}}
                    {{/animalSizes}}
                </select>
            </div>

            <div class="form-group flex-container__item">
                <label for="color">Color</label>
                <input type="color" value="#ffa8a8" class="form-control" id="color" name="color" required>
            </div>
        </div>

        <div class="flex-container">

            <div class="form-group flex-container__item">
                <label for="price">Price â‚¬</label>
                <input type="number" min="1" class="form-control" id="price" name="price" required>
            </div>

            <div class="form-group flex-container__item">
                <label for="numberInStock">Number in stock</label>
                <input type="number" min="1" class="form-control" id="numberInStock" name="numberInStock" required>
            </div>
        </div>


        <div style="margin-top: 1em" class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" rows="3" name="description" required></textarea>
        </div>

        <input class="btn" type="submit" value="Create new">

    </form>

</div>

